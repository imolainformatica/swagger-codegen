<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <title>Swagger UI</title>
        <link rel="stylesheet" type="text/css" href="webjars/swagger-ui/3.1.7/swagger-ui.css">
        <link rel="icon" type="image/png" href="webjars/swagger-ui/3.1.7/favicon-32x32.png" sizes="32x32"/>
        <link rel="icon" type="image/png" href="webjars/swagger-ui/3.1.7/favicon-16x16.png" sizes="16x16"/>
    </head>
    <body>
        <div id="swagger-ui"></div>

        <script src="webjars/swagger-ui/3.1.7/swagger-ui-bundle.js"></script>
        <script src="webjars/swagger-ui/3.1.7/swagger-ui-standalone-preset.js"></script>
        <script>
            window.onload = function() {

              // Build a system
              const ui = SwaggerUIBundle({
                url: window.location.origin + "{{contextPath}}/api-doc/swagger.yaml",
                dom_id: '#swagger-ui',
                deepLinking: true,
                presets: [
                  SwaggerUIBundle.presets.apis,
                  SwaggerUIStandalonePreset
                ],
                plugins: [
                  SwaggerUIBundle.plugins.DownloadUrl
                ],
                layout: "StandaloneLayout"
              })

              window.ui = ui
            }
        </script>
    </body>
</html>
